{
    "compilerOptions": {
        "baseUrl": "./src/",
        "target": "es5",
        "lib": ["es2015"],
        "module": "esnext",
        "moduleResolution": "node",
        "removeComments": true,
        "declaration": false,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "noUnusedLocals": true,
        "strict": true,
        "sourceMap": true,
        "jsx": "react",
        "allowJs": true,
        "noEmit": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "plugins": [
            {
                "name": "typescript-styled-plugin"
            }
        ]
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"],
    "exclude": ["**/*.spec.ts", "**/*.spec.tsx", "**/*.snap"]
}
